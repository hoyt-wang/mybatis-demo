    <select id="findUserById" resultType="user">
        SELECT
            u.id,
            user_name,
            PASSWORD,
            address,
            dept_id,
            d.id as 'dept.id',<!--ORGL对象图导航语言-->
           dept_name as 'dept.deptName'
        FROM
            t_user u
        LEFT JOIN t_dept d ON u.dept_id = d.id
        WHERE
            u.id = #{userId};
    </select>

</mapper>